:seti -XNamedWildCards

:seti -XUnicodeSyntax
:seti -XLambdaCase
:seti -XTupleSections

:seti -XOverloadedStrings
-- :seti -XOverloadedLists
-- :seti -XOverloadedLabels
-- :seti -XNegativeLiterals

:seti -XPatternGuards
:seti -XViewPatterns
:seti -XNamedFieldPuns
:seti -XRecordWildCards
:seti -XPatternSynonyms

-- :seti -XRecursiveDo
-- :seti -XApplicativeDo
-- :seti -XArrows

:seti -XRankNTypes
:seti -XScopedTypeVariables

:seti -XTypeApplications
-- :seti -XEmptyDataDecls
-- :seti -XDataKinds
-- :seti -XPolyKinds
-- :seti -XTypeInType

:seti -XBangPatterns
